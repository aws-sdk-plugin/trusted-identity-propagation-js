{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2015"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "**/*.spec.ts"]
}
